<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/connect"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:text="Log in"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#FBFBFB" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/baseline_email_24"
        android:hint="Email or Username"
        android:minHeight="48dp"
        android:textColor="#040303"
        android:textColorHint="#424242"
        android:drawableLeft="@drawable/baseline_email_24" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_password"
        android:layout_margin="10dp"
        android:hint="Password"
        android:scrollbarSize="15dp"
        android:textColorHint="#222323"
        app:boxBackgroundColor="#2BF433"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/baseline_lock_open_24">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:rotationX="-360"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="#068DF8"
        android:textStyle="bold"
        app:backgroundTint="#389AFD" />


    <Button
        android:id="@+id/btn_log_in"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/input_bg"
        android:layout_margin="10dp"
        android:onClick="onMatch"
        android:text="LOG IN"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Don't have an account?"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#FBFAFA"
        android:textSize="16sp"
        app:backgroundTint="#FBFBFB" />


    <TextView
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:id="@+id/regitser_login"
        android:background="@drawable/underline"
        android:gravity="center"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#7FFB32" />

    <TextView
                style="@style/CardView.Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Or Log in with"
                android:textAlignment="center"
                android:textColor="#FDFCFD"
                android:textSize="22dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/socialbutton_1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:drawableLeft="@drawable/google_icon"
                android:gravity="center"
                android:text="Google"
                android:textAllCaps="false"
                android:textColor="#050101"
                app:backgroundTint="#FBF7F7"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/socialbutton_2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:drawableLeft="@drawable/facebook_official"
                android:gravity="center"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textColor="#050101"
                app:backgroundTint="#FBF7F7" />




</LinearLayout>






